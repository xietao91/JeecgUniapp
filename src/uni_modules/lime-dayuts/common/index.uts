		 return ((this.$y % 4 == 0) && (this.$y % 100 != 0)) || (this.$y % 400 == 0)
	}
	isToday():boolean{
		const comparisonTemplate = 'YYYY-MM-DD'
		const now = dayuts()
		
		return this.format(comparisonTemplate) == now.format(comparisonTemplate)
